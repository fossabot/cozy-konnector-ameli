{
  "name": "cozy-konnector-ameli",
  "version": "1.0.6",
  "description": "Cozy v3 Konnector for Ameli",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/briced/cozy-konnector-v3-ameli.git"
  },
  "keywords": [],
  "author": "",
  "license": "AGPL-3.0",
  "dependencies": {
    "cozy-konnector-libs": "^3.0.4"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^4.0.1",
    "git-directory-deploy": "^1.5.1",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "prettier-standard": "^7.0.3",
    "standard": "^10.0.2",
    "webpack": "^3.6.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "clean": "rm *_ameli.pdf",
    "dev": "cozy-konnector-dev src/index.js",
    "standalone":
      "npm run clean ; cozy-konnector-standalone src/index.js && ls *_ameli.pdf | wc -l",
    "standalone:record": "REPLAY=record cozy-konnector-standalone src/index.js",
    "standalone:replay": "REPLAY=replay cozy-konnector-standalone src/index.js",
    "build": "webpack",
    "lint": "standard --fix src/index.js",
    "preversion": "npm run lint",
    "postversion":
      "npm run build && npm run deploy && git push && git push --tags && rm -rf build/",
    "precommit": "lint-staged",
    "prettify": "prettier-standard 'src/**/*.js'"
  },
  "lint-staged": {
    "*.{js,json,css}": ["prettify", "git add"]
  }
}
